<style>


</style>

<div class="row">
  <div class="col-12 chalkboard-container">
    <img class="chalkboard" src="{{asset "images/chalkboard-background.png"}}">
    
    <div class="row row-footer">
      <div class="col-12 col-sm-4">
        <div class="overlay-text">
          {{!-- The big email subscribe modal content --}}
          {{#if @labs.subscribers}}
            <span class="section-sub-copy">
              Newsletter
            </span>
            <br/><br/>
            <span class="heading-3">
              Interested in learning more?
            </span>
            <br/><br/>
            {{subscribe_form 
                placeholder="email"
                input_class="input-field"
                button_class="submit-button"
            }}
          {{/if}}
          <br/>
        </div>
      </div>
      <div class="col-12 col-sm-8">
        <div class="overlay-text">
          {{#get "posts" slug="home-footer" as |post|}}
            {{#post}}
              {{content}}
            {{/post}}
          {{/get}}
        </div>
      </div>
    </div>    
  </div>
</div>
