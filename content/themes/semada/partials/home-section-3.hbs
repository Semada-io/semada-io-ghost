<div class="row">
  <div class="col-12 chalkboard-container">
    <img class="chalkboard" src="{{asset "images/chalkboard-background.jpg"}}">
    <a id="protocol-stack"></a>
    <div class="row-section">
      
      <div class="row">
        <div class="col-12">
          <div class="overlay-text">
            {{#get "posts" slug="home-section-4" as |post|}}
              {{#post}}
                <div class="heading-1-wrapper center-text">
                  <div class="heading-1">
                    {{content}}
                  </div>
                </div>
              {{/post}}
            {{/get}}
          </div>
        </div>
      </div>
      
      <!-- Section 1 -->
      <div class="row">

        <div class="col-12 col-sm-6 order-sm-1">
          <!-- <div class="d-none d-sm-block" style="height:45%;"></div> -->
          
          <div class="overlay-text">
            {{#get "posts" slug="home-section-5" as |post|}}
              {{#post}}
                <div class="heading-3">
                  {{title}}
                </div>
                <br/>
                {{content}}
              {{/post}}
            {{/get}}
          </div>

        </div>
        
        <div class="col-12 col-sm-6 order-sm-12">
          
            <video 
              id="pormovie"
              class="overlay-image center-item" 
              height="100%"
              controls="true"
              preload="metadata"
              playsinline
              autoplay>
              <source 
                src="https://s3.us-east-2.amazonaws.com/semadalandingpage/por.mp4" 
                type="video/mp4">
            </video>
          
            <br/>
        </div>

      </div>
      <br/><br/>
      <!-- Section 2 -->
      <!-- <div class="row-section d-none d-sm-block">
      </div> -->
      <div class="row">
        <div class="col-12 col-sm-6 order-sm-12">
          <!-- <div class="d-none d-sm-block" style="height:45%;"></div> -->
          
          <div class="overlay-text">
            {{#get "posts" slug="home-section-6" as |post|}}
              {{#post}}
                <div class="heading-3">
                  {{title}}
                </div>
                <br/>
                {{content}}
              {{/post}}
            {{/get}}
          </div>

        </div>
        
        <div class="col-12 col-sm-6 order-sm-1">
          <video 
            id="pormovie"
            class="overlay-image center-item" 
            height="100%"
            controls
            preload="metadata"
            playsinline
            autoplay>
            <source 
              src="https://s3.us-east-2.amazonaws.com/semadalandingpage/tvmovie.mp4" 
              type="video/mp4">
          </video>
            
            <br/>
          
        </div>

      </div>
    </div>
  </div>
</div>
