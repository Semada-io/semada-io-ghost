 .image-container {
   position: relative;
 }
 
 .chalkboard {
   position: absolute;
   top: 0;
   left: 0;
   z-index: 1;
   height: 100%;
   width: 100%;
 }
 .overlay-image {
   position: relative;
   top: 0;
   left: 0;
   z-index: 2;
 }
 .full-height-image {
   object-fit: cover;
   height: 100vh;
   object-position: 21%;
 }
 .overlay-text {
   position: relative;
   top:0;
   left:0;
   z-index: 3;
   color: white;
 }
 .screen-row {
   height: 100vh;
 }

</style>

<div class="row screen-row">
  <div class="col-12 image-container">
    <img class="chalkboard" src="{{asset "images/chalkboard-background.png"}}">
    
    <div class="row">
      <div class="col-xs-12 col-sm-9 order-sm-12">
        <img class="overlay-image full-height-image" src="{{asset "images/header.png"}}">
      </div>
      <div class="col-xs-12 col-sm-3 order-sm-1">
        <div class="d-none d-sm-block" style="height:45%;"></div>
        
        <div class="overlay-text">
          {{#get "posts" slug="home-section-1" as |post|}}
            {{#post}}
              <div class="heading-1">
                {{title}}
              </div>
              <div class="section-copy">
                {{content}}
              </div>
            {{/post}}
          {{/get}}
        </div>

      </div>
    </div>
  </div>
</div>
